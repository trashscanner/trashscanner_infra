version: '3.8'

services:
  minio:
    image: minio/minio:latest
    container_name: trashscanner_minio
    restart: unless-stopped
    environment:
      MINIO_ROOT_USER: {{ minio_root_user }}
      MINIO_ROOT_PASSWORD: {{ minio_root_password }}
    command: server /data --console-address ":9001"
    ports:
      - "{{ minio_port }}:9000"
      - "{{ minio_console_port }}:9001"
    volumes:
      - minio_data:/data
    healthcheck:
      test: ["CMD", "mc", "ready", "local"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - trashscanner_network

  minio-init:
    image: minio/mc:latest
    container_name: trashscanner_minio_init
    depends_on:
      minio:
        condition: service_healthy
    entrypoint: >
      /bin/sh -c "
      mc alias set local http://minio:9000 {{ minio_root_user }} {{ minio_root_password }};
      mc mb local/{{ minio_bucket }} --ignore-existing;
      mc anonymous set download local/{{ minio_bucket }};
      echo 'MinIO bucket {{ minio_bucket }} created successfully';
      exit 0;
      "
    networks:
      - trashscanner_network

volumes:
  minio_data:
    driver: local

networks:
  trashscanner_network:
    name: trashscanner_network
    driver: bridge
