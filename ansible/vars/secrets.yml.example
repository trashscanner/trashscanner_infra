server_host: "your-server-ip-or-domain"
server_user: "deploy"
ansible_become_password: "your-sudo-password"  # Optional: sudo password for deploy user

# PostgreSQL configuration
postgres_user: "trashscanner"
postgres_password: "your-strong-password"
postgres_db: "trashscanner_db"
postgres_port: "5432"

# MinIO configuration
minio_root_user: "minioadmin"
minio_root_password: "your-strong-password"
minio_port: "9000"
minio_console_port: "9001"
minio_bucket: "trashscanner-images"

# Deployment mode: postgres, minio, or all
deployment_mode: "all"
